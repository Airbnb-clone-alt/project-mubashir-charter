<% layout('layouts/boilerplate') %> 

<style>
  .yacht-card {
    position: relative;
    overflow: hidden;
    color: #fff;
    border-radius: 1rem;
    padding: 1rem;
    min-height: 120px;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    box-shadow: 0 8px 24px rgba(0,0,0,0.1);
    backdrop-filter: blur(10px);
    background: linear-gradient(135deg, rgba(0,0,0,0.8), rgba(0,0,0,0.2));
    transition: transform 0.4s ease, box-shadow 0.4s ease;
  }

  .yacht-card::before {
    content: "";
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: linear-gradient(135deg, yellow, brown, black, purple, pink,aqua, aliceblue, );
    background-size: 400% 400%;
    animation: gradientMove 12s ease infinite;
    z-index: 0;
    opacity: 0.5;
  }

  .yacht-card h5 {
    z-index: 1;
  }

  .yacht-card:hover {
    transform: translateY(-6px) scale(1.05);
    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.3);
  }

  @keyframes gradientMove {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }
</style>

<div class="container my-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">Available Yachts</h1>
    <a href="/yachts/new" class="btn btn-success">+ Add Yacht</a>
  </div>

  <% if (yachts.length > 0) { %>
    <div class="row g-4">
      <% yachts.forEach(y => { %>
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
          <a href="/yachts/<%= y._id %>" class="text-decoration-none">
            <div class="yacht-card">
              <h5 class="fw-bold mb-0"><%= y.name %></h5>
            </div>
          </a>
        </div>
      <% }) %>
    </div>
  <% } else { %>
    <p class="text-muted">No yachts available at the moment. Please add a new yacht.</p>
  <% } %>
</div>
