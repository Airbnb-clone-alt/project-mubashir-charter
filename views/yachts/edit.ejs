<% layout('layouts/boilerplate') %>

<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-7 col-lg-5">
      <div class="card shadow-lg border-0 rounded-4" 
           style="background: rgba(255, 255, 255, 0.85); backdrop-filter: blur(10px); min-height: 500px;">
        <div class="card-header text-white text-center rounded-top-4" 
             style="background: linear-gradient(135deg, #000000, #434343);">
          <h1 class="mb-0">üõ†Ô∏è Edit Yacht</h1>
        </div>
        <div class="card-body p-4 d-flex flex-column justify-content-center">
          <form action="/yachts/<%= yacht._id %>?_method=PUT" method="POST" class="row g-4">
            
            <div class="col-12">
              <label for="name" class="form-label fw-bold">Yacht Name</label>
              <input 
                type="text" 
                class="form-control form-control-lg rounded-pill shadow-sm" 
                name="yacht[name]" 
                id="name" 
                value="<%= yacht.name %>" 
                required>
            </div>

            <div class="col-12">
              <label for="description" class="form-label fw-bold">Description</label>
              <textarea 
                class="form-control form-control-lg rounded-4 shadow-sm" 
                name="yacht[description]" 
                id="description" 
                rows="6" 
                required><%= yacht.description %></textarea>
            </div>

            <div class="col-12 d-grid">
              <button type="submit" class="btn btn-lg rounded-pill shadow" 
                      style="background: linear-gradient(135deg, #000000, #434343); color: white; border: none;">
                üíæ Update Yacht
              </button>
            </div>

          </form>
        </div>
      </div>
    </div>
  </div>
</div>
